extends layout

block content
    h1.greeting Start Your #[strong Unique] Experience Today!

    if errors
        ul.error-list
            for error in errors
                li!= error.msg

    form#LogIn.credential(method="POST", action="")
        div.email-section(title="User's email address")
            label(for="emailInput") Email:#[br]
            input#emailInput(type="email", placeholder="example@server.com", name="email", required)
        div.password-section(title="User's password. Recommend a combination of letter, number, and special characters")
            label(for="passwordInput") Password:#[br]
            input#passwordInput(type="password", placeholder="example-password", name="password", minlength="8", maxlength="50", required)
        div.submission-section
            button(type="submit") Submit
        div.additional-option(style="text-align: center;")
            a(href="/user/sign-up") Don't have an account yet? Join today!
            br
            br
            a(href="/user/recovery") I forgot my password