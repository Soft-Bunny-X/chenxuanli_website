extends layout

block content
    h1.greeting Start Your #[strong Unique] Experience Today!
    //- The sign-up form send post request on the same url
    form#signUp.credential(method="POST", action="")
        div.verification-code(title="Verification Code")
            label(for="code") Verification Code:#[br]
            input#CodeInput(type="text", name="code", required)
        div.submission-section
            button(type="submit") Submit
    
    if errors
        ul
            for error in errors
                li!= error.msg